<Window x:Class="MovMux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MovMux"
        Width="920"
        MinWidth="920"
        SizeToContent="Manual"
        Height="940"
        MinHeight="700">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Fluent-ish brushes -->
        <SolidColorBrush x:Key="AppBgBrush" Color="#FFF6F7F9"/>
        <SolidColorBrush x:Key="CardBgBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1A000000"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FF1F1F1F"/>
        <SolidColorBrush x:Key="SubtleTextBrush" Color="#FF6B6B6B"/>

        <SolidColorBrush x:Key="AccentBrush" Color="#FF2563EB"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#FF1D4ED8"/>
        <SolidColorBrush x:Key="AccentBrushPressed" Color="#FF1E40AF"/>

        <!-- Shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="2" Opacity="0.12" Color="#000000"/>

        <!-- Default font -->
        <Style TargetType="{x:Type Control}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A000000"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#22000000"/>
            <Setter Property="Background" Value="#FFF1F3F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFE7EAEE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFDDE2E7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- "Primary" button (assign via Tag=Primary) -->
        <Style TargetType="{x:Type Button}" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrushHover}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrushPressed}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrushPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox as card -->
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <StackPanel>
                            <TextBlock Text="{TemplateBinding Header}"
                                       Margin="4,0,0,8"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource SubtleTextBrush}"/>
                            <Border Background="{StaticResource CardBgBrush}"
                                    BorderBrush="{StaticResource CardBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="12"
                                    Effect="{StaticResource CardShadow}">
                                <ContentPresenter/>
                            </Border>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window background -->
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource AppBgBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="18" FontWeight="SemiBold" Text="MOV mux with 2 audio tracks (FFmpeg)"/>

        <GroupBox Grid.Row="1" Header="Inputs" Margin="0,12,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Video (MOV):" Margin="0,0,8,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Margin="0,0,8,0"
                         AllowDrop="True"
                         PreviewDragOver="PathTextBox_PreviewDragOver"
                         Drop="VideoPathTextBox_Drop"
                         Text="{Binding VideoPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="0" Grid.Column="2" Width="110" Content="Browse..." Click="BrowseVideo_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Audio 1:" Margin="0,8,8,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Margin="0,8,8,0"
                         AllowDrop="True"
                         PreviewDragOver="PathTextBox_PreviewDragOver"
                         Drop="Audio1PathTextBox_Drop"
                         Text="{Binding Audio1Path, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="1" Grid.Column="2" Width="110" Margin="0,8,0,0" Content="Browse..." Click="BrowseAudio1_Click"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Audio 2:" Margin="0,8,8,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Margin="0,8,8,0"
                         AllowDrop="True"
                         PreviewDragOver="PathTextBox_PreviewDragOver"
                         Drop="Audio2PathTextBox_Drop"
                         Text="{Binding Audio2Path, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="2" Grid.Column="2" Width="110" Margin="0,8,0,0" Content="Browse..." Click="BrowseAudio2_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Track metadata and per-input -ss" Margin="0,12,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Video -ss (sec):" Margin="0,0,8,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Height="26"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="SecondsTextBox_PreviewTextInput"
                         DataObject.Pasting="SecondsTextBox_Pasting"
                         Text="{Binding VideoStartSecondsText, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Audio 1 -ss (sec):" Margin="0,8,8,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Margin="0,8,0,0"
                         Height="26"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="SecondsTextBox_PreviewTextInput"
                         DataObject.Pasting="SecondsTextBox_Pasting"
                         Text="{Binding Audio1StartSecondsText, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Audio 2 -ss (sec):" Margin="0,8,8,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Margin="0,8,0,0"
                         Height="26"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="SecondsTextBox_PreviewTextInput"
                         DataObject.Pasting="SecondsTextBox_Pasting"
                         Text="{Binding Audio2StartSecondsText, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Text="Audio 1 title:" Margin="0,8,8,0"/>
                <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Analog" GroupName="Audio1Source" IsChecked="{Binding Audio1IsAnalog, Mode=TwoWay}"/>
                        <RadioButton Content="Digital" GroupName="Audio1Source" Margin="12,0,0,0" IsChecked="{Binding Audio1IsDigital, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <RadioButton Content="48 kHz" GroupName="Audio1Rate" IsChecked="{Binding Audio1Is48k, Mode=TwoWay}"/>
                        <RadioButton Content="44.1 kHz" GroupName="Audio1Rate" Margin="12,0,0,0" IsChecked="{Binding Audio1Is441k, Mode=TwoWay}"/>
                    </StackPanel>
                    <TextBox Margin="0,6,0,0" IsReadOnly="True" Text="{Binding Audio1Title, Mode=OneWay}"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Text="Audio 2 title:" Margin="0,8,8,0"/>
                <StackPanel Grid.Row="2" Grid.Column="4" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Analog" GroupName="Audio2Source" IsChecked="{Binding Audio2IsAnalog, Mode=TwoWay}"/>
                        <RadioButton Content="Digital" GroupName="Audio2Source" Margin="12,0,0,0" IsChecked="{Binding Audio2IsDigital, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <RadioButton Content="48 kHz" GroupName="Audio2Rate" IsChecked="{Binding Audio2Is48k, Mode=TwoWay}"/>
                        <RadioButton Content="44.1 kHz" GroupName="Audio2Rate" Margin="12,0,0,0" IsChecked="{Binding Audio2Is441k, Mode=TwoWay}"/>
                    </StackPanel>
                    <TextBox Margin="0,6,0,0" IsReadOnly="True" Text="{Binding Audio2Title, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Output" Margin="0,12,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Output MOV:" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1"
                         Margin="0,0,8,0"
                         AllowDrop="True"
                         PreviewDragOver="PathTextBox_PreviewDragOver"
                         Drop="OutputPathTextBox_Drop"
                         Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Column="2" Width="110" Content="Save as..." Click="BrowseOutput_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="FFmpeg command" Margin="0,12,0,0">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Width="140" Margin="0,0,8,0" Content="Generate" Click="GenerateCommand_Click"/>
                    <Button Width="140" Margin="0,0,8,0" Content="Copy" Click="CopyCommand_Click"/>
                    <Button Width="140" Content="Run FFmpeg" Click="RunFfmpeg_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>

                <TextBox x:Name="FfmpegLogTextBox"
                         FontFamily="Consolas"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         MinHeight="140"
                         IsReadOnly="True"
                         Text="{Binding FfmpegLog, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                         TextChanged="FfmpegLogTextBox_TextChanged"/>
            </DockPanel>
        </GroupBox>

        <TextBlock Grid.Row="5" Margin="0,6,0,0">
            <Run Text="FFmpeg download: "/>
            <Hyperlink NavigateUri="https://ffmpeg.org/download.html" RequestNavigate="FfmpegLink_RequestNavigate">
                <Run Text="https://ffmpeg.org/download.html"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
